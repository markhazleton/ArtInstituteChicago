@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-shield-check fs-4 me-3"></i>
                        <h1 class="card-title h3 mb-0">@ViewData["Title"]</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="alert alert-info border-0" role="alert">
                                <div class="d-flex">
                                    <i class="bi bi-info-circle-fill me-3 mt-1"></i>
                                    <div>
                                        <h5 class="alert-heading mb-2">Information Collection</h5>
                                        <p class="mb-0">This application demonstrates integration with the WebSpark.ArtSpark
                                            API. We do not collect or store personal information.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mt-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-eye fs-4 text-primary me-3 mt-1"></i>
                                <div>
                                    <h5 class="text-body-emphasis">Data Viewing</h5>
                                    <p class="text-body-secondary mb-0">All artwork data is sourced from the WebSpark.ArtSpark's public API and is displayed for educational purposes.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-server fs-4 text-primary me-3 mt-1"></i>
                                <div>
                                    <h5 class="text-body-emphasis">External Services</h5>
                                    <p class="text-body-secondary mb-0">This site uses the WebSpark.ArtSpark API.
                                        Please refer to their privacy policy for data handling practices.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-cookie fs-4 text-primary me-3 mt-1"></i>
                                <div>
                                    <h5 class="text-body-emphasis">Cookies</h5>
                                    <p class="text-body-secondary mb-0">This application may use session cookies for
                                        basic functionality. No tracking or analytics cookies are used.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-envelope fs-4 text-primary me-3 mt-1"></i>
                                <div>
                                    <h5 class="text-body-emphasis">Contact</h5>
                                    <p class="text-body-secondary mb-0">For questions about this privacy policy, please
                                        contact the application administrator.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <p class="text-body-tertiary small mb-0">
                            <i class="bi bi-calendar3 me-2"></i>
                            Last updated: @DateTime.Now.ToString("MMMM yyyy")
                        </p>
                    </div>
                </div>
                <div class="card-footer bg-body-tertiary">
                    <div class="text-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                            <i class="bi bi-house me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





