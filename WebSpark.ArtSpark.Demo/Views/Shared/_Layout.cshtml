    <!-- Pre-load default theme and preferences -->
    <script>
        // Set default theme before WebSpark.Bootswatch initializes
        (function ()
        {
            // Cookie utility functions
            const CookieManager = {
                get: function (name)
                {
                    const nameEQ = name + "=";
                    const ca = document.cookie.split(';');
                    for (let i = 0; i < ca.length; i++)
                    {
                        let c = ca[i];
                        while (c.charAt(0) == ' ') c = c.substring(1, c.length);
                        if (c.indexOf(nameEQ) == 0) return decodeURIComponent(c.substring(nameEQ.length, c.length));
                    }
                    return null;
                }
            };

            // Check if user has a saved theme preference
            const savedTheme = CookieManager.get('webspark-theme') ||
                localStorage.getItem('bootswatch-theme');

            // If no saved theme, set default to yeti in localStorage for WebSpark.Bootswatch to pick up
            if (!savedTheme)
            {
                localStorage.setItem('bootswatch-theme', 'yeti');
            }
        })();
    </script>
    @await RenderSectionAsync("Styles", required: false)
</head>

